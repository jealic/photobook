 <header id="header">
  <div class="container">
    <nav>
      <div class="album_name">
        <h2>
          Photo Book
        </h2>
        <div class="ed_ne_button">
          <%= link_to "Back to index", photos_path %>
        </div>
      </div>
    </nav>
  </div>
</header>
<br>
<hr>
<br>

<% if @photo.errors.present? %>
  <ul>
    <% @photo.errors.each do |error, message| %>
    <li><%= "#{error.capitalize} #{message}" %></li>
    <% end %>
  </ul>
<% end %>


<div class="form container">
  <%= form_for @photo do |f| %>

    <div class="form-group"> 
      <%= f.label :title, "Titile" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">    
      <%= f.label :date, "Date" %>
      <%= f.text_field :date, class: "form-control" %>
    </div>

    <div class="form-group">    
      <%= f.label :file_location, "File Location" %>
      <%= f.file_field :file_location %>
    </div>



    <div class="form-group">    
      <%= f.label :description, "Description" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
      <%= f.submit %>
  <% end %>
</div>

  
